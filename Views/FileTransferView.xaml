<UserControl x:Class="meshIt.Views.FileTransferView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A1A2E" Padding="16,12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“" FontSize="20" Margin="0,0,8,0"/>
                <TextBlock Text="Transfers" FontSize="16" FontWeight="SemiBold"
                           Foreground="#E0E0E0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Transfer list -->
        <ListBox Grid.Row="1" ItemsSource="{Binding FileTransfers}"
                 Background="#0F0F23" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="Transparent" CornerRadius="8" Margin="6,3"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#1E1E3A" CornerRadius="10" Padding="14,12">
                        <StackPanel>
                            <!-- File name & direction -->
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="ðŸ“¥"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOutgoing}" Value="True">
                                                        <Setter Property="Text" Value="ðŸ“¤"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding FileName}" FontSize="13"
                                               Foreground="#E0E0E0" FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                </StackPanel>
                                <!-- Status badge -->
                                <TextBlock HorizontalAlignment="Right" FontSize="11"
                                           VerticalAlignment="Center" Padding="8,2"
                                           Text="{Binding Status}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#FFC107"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <!-- Progress bar -->
                            <Grid Margin="0,8,0,0">
                                <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="100"
                                             Height="6" Foreground="#7C4DFF" Background="#2A2A4A"
                                             BorderThickness="0">
                                    <ProgressBar.Template>
                                        <ControlTemplate TargetType="ProgressBar">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="3"/>
                                                <Border x:Name="PART_Indicator" CornerRadius="3"
                                                        HorizontalAlignment="Left"
                                                        Background="{TemplateBinding Foreground}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </ProgressBar.Template>
                                </ProgressBar>
                            </Grid>

                            <!-- Chunk count + speed -->
                            <Grid Margin="0,6,0,0">
                                <TextBlock FontSize="11" Foreground="#757575">
                                    <Run Text="{Binding TransferredChunks, Mode=OneWay}"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding TotalChunks, Mode=OneWay}"/>
                                    <Run Text=" chunks"/>
                                </TextBlock>
                                <TextBlock HorizontalAlignment="Right" FontSize="11" Foreground="#757575"
                                           Text="{Binding Progress, StringFormat='{}{0:F0}%'}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Empty state -->
        <TextBlock Grid.Row="1" Text="No active transfers" FontSize="13" Foreground="#616161"
                   HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding FileTransfers.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
