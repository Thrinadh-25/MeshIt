<UserControl x:Class="meshIt.Views.ChannelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#2C2F33">
    <Grid Margin="0,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="CHANNELS" FontSize="11" FontWeight="Bold"
                   Foreground="#72767D" Margin="14,8,14,6"/>

        <!-- Join input -->
        <Grid Grid.Row="1" Margin="10,0,10,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#40444B" CornerRadius="4" Padding="2,0">
                <TextBox Text="{Binding ChannelInput, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="12" Padding="8,6"
                         Background="Transparent" BorderThickness="0"
                         Foreground="#DCDDDE" CaretBrush="#7289DA">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding JoinChannelCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
            </Border>
            <Button Grid.Column="1" Content="+" FontSize="16" FontWeight="Bold" Margin="4,0,0,0"
                    Command="{Binding JoinChannelCommand}"
                    Cursor="Hand" Padding="8,4" ToolTip="Join channel">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#43B581"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#36393F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Joined channels -->
        <ListBox Grid.Row="2" ItemsSource="{Binding Channels}"
                 SelectedItem="{Binding SelectedChannel}"
                 Background="Transparent" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="10,6"/>
                    <Setter Property="Margin" Value="4,1"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#8E9297"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4" Padding="{TemplateBinding Padding}"
                                        Margin="{TemplateBinding Margin}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#393C43"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#36393F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#" FontSize="16" FontWeight="Bold"
                                   Foreground="#72767D" Margin="0,0,4,0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" FontSize="14" VerticalAlignment="Center"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}">
                            <Run Text="{Binding Name, Mode=OneWay}"/>
                        </TextBlock>
                        <Button Grid.Column="2" Content="âœ•" FontSize="11"
                                Command="{Binding DataContext.LeaveChannelCommand,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding Name}"
                                Background="Transparent" BorderThickness="0"
                                Foreground="#72767D" Cursor="Hand" Padding="4,0"
                                Opacity="0.6" ToolTip="Leave">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                     Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Available channels header -->
        <TextBlock Grid.Row="3" Text="DISCOVER" FontSize="11" FontWeight="Bold"
                   Foreground="#72767D" Margin="14,8,14,4">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AvailableChannels.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!-- Available channels list -->
        <ListBox Grid.Row="4" ItemsSource="{Binding AvailableChannels}"
                 Background="Transparent" BorderThickness="0"
                 MaxHeight="120">
            <ListBox.Style>
                <Style TargetType="ListBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AvailableChannels.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.Style>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="10,4"/>
                    <Setter Property="Margin" Value="4,1"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4" Padding="{TemplateBinding Padding}"
                                        Margin="{TemplateBinding Margin}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#36393F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#" FontSize="14" FontWeight="Bold"
                                   Foreground="#72767D" Margin="0,0,4,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="12" Foreground="#8E9297"/>
                        <Button Grid.Column="2" Content="Join" FontSize="11"
                                Command="{Binding DataContext.JoinAvailableChannelCommand,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding Name}"
                                Background="Transparent" BorderThickness="0"
                                Foreground="#43B581" Cursor="Hand" Padding="4,2"
                                ToolTip="Join this channel"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
