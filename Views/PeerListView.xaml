<UserControl x:Class="meshIt.Views.PeerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:meshIt.Converters">
    <UserControl.Resources>
        <converters:StatusToBrushConverter x:Key="StatusToBrush"/>
        <converters:SignalStrengthConverter x:Key="SignalStrength"/>
    </UserControl.Resources>

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1A1A2E" Padding="16,12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“¡" FontSize="20" Margin="0,0,8,0"/>
                <TextBlock Text="Nearby Users" FontSize="16" FontWeight="SemiBold"
                           Foreground="#E0E0E0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Peer List -->
        <ListBox Grid.Row="1" 
                 ItemsSource="{Binding Peers}"
                 SelectedItem="{Binding SelectedPeer, Mode=TwoWay}"
                 Background="#0F0F23"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                        Background="Transparent" CornerRadius="8" Margin="6,2">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#1E1E3A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#2D2D5E"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar circle -->
                        <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18"
                                Background="#3F51B5" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name, Converter={x:Null}}"
                                       FontSize="16" FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Tag="{Binding Name}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <Binding Path="Name" FallbackValue="?">
                                                    <Binding.StringFormat>{0}</Binding.StringFormat>
                                                </Binding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <!-- Name + status -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"
                                       Foreground="#E8E8E8"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <Ellipse Width="8" Height="8" 
                                         Fill="{Binding Status, Converter={StaticResource StatusToBrush}}"
                                         Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Status}" FontSize="11" Foreground="#9E9E9E"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Signal strength -->
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding SignalStrength, Converter={StaticResource SignalStrength}}"
                                   FontSize="10" Foreground="#757575" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
