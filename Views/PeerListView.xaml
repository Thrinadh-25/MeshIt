<UserControl x:Class="meshIt.Views.PeerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:meshIt.Converters">
    <UserControl.Resources>
        <converters:StatusToBrushConverter x:Key="StatusToBrush"/>
    </UserControl.Resources>

    <Grid Background="#2C2F33">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C2F33" Padding="14,12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸ‘¥" FontSize="18" Margin="0,0,8,0"/>
                <TextBlock Text="Nearby Users" FontSize="16" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Peer List -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Peers}"
                 SelectedItem="{Binding SelectedPeer, Mode=TwoWay}"
                 Background="Transparent" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                        Background="Transparent" CornerRadius="4" Margin="6,1">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#36393F"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#393C43"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Grid Grid.Column="0" VerticalAlignment="Center">
                            <Border Width="32" Height="32" CornerRadius="16" Background="#7289DA">
                                <TextBlock FontSize="14" FontWeight="Bold" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text">
                                                <Setter.Value>
                                                    <Binding Path="Name" FallbackValue="?"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                            <!-- Online indicator -->
                            <Ellipse Width="10" Height="10"
                                     Fill="{Binding Status, Converter={StaticResource StatusToBrush}}"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Stroke="#2C2F33" StrokeThickness="2"/>
                        </Grid>

                        <!-- Name + Protocol -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"
                                       Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <!-- Protocol badge -->
                                <TextBlock FontSize="11" Foreground="#72767D" Margin="0,0,6,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="ðŸ”µ Classic"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding Status}" FontSize="10" Foreground="#72767D"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Signal -->
                        <TextBlock Grid.Column="2" FontSize="11" Foreground="#72767D"
                                   VerticalAlignment="Center" Margin="4,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="â–‚â–„"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
