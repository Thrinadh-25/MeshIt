<Window x:Class="meshIt.Views.LockScreenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="meshIt â€” Locked"
        WindowStyle="None" AllowsTransparency="True"
        WindowState="Maximized" Topmost="True"
        Background="#E6000000" ShowInTaskbar="False">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="360">

            <!-- Lock icon -->
            <TextBlock Text="ðŸ”’" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- App name -->
            <TextBlock Text="meshIt" FontSize="28" FontWeight="Bold"
                       Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,8"/>

            <TextBlock Text="Enter PIN to unlock" FontSize="13"
                       Foreground="#9E9E9E" HorizontalAlignment="Center" Margin="0,0,0,24"/>

            <!-- PIN input -->
            <Border Background="#1A1A2E" CornerRadius="12" Padding="4,0" Margin="0,0,0,16">
                <PasswordBox x:Name="PinBox" FontSize="24" MaxLength="8"
                             PasswordChar="â—" HorizontalContentAlignment="Center"
                             Padding="16,12"
                             Background="Transparent" BorderThickness="0"
                             Foreground="#E0E0E0" CaretBrush="#7C4DFF"
                             KeyDown="PinBox_KeyDown"/>
            </Border>

            <!-- Error message -->
            <TextBlock x:Name="ErrorText" Text="" FontSize="12"
                       Foreground="#EF5350" HorizontalAlignment="Center" Margin="0,0,0,16"/>

            <!-- Unlock button -->
            <Button Content="Unlock" FontSize="15" Padding="20,12"
                    HorizontalAlignment="Center" Cursor="Hand"
                    Click="Unlock_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#7C4DFF"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9C7CFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
