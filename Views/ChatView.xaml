<UserControl x:Class="meshIt.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:meshIt.Converters">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Background="#16162B">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat header -->
        <Border Grid.Row="0" Background="#1A1A2E" Padding="16,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="{Binding SelectedPeer, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="ðŸ’¬" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding SelectedPeer.Name}" FontSize="16" FontWeight="SemiBold"
                               Foreground="#E0E0E0" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Select a peer to start chatting"
                           FontSize="14" Foreground="#757575" VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedPeer}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Settings button -->
                <Button Content="âš™ï¸" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Command="{Binding ToggleSettingsCommand}"
                        Background="Transparent" BorderThickness="0" Foreground="White"
                        FontSize="18" Cursor="Hand" Padding="8,4" Margin="0,0,4,0"/>
            </Grid>
        </Border>

        <!-- Messages list -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Messages}"
                 Background="Transparent" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 x:Name="MessagesList">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="Padding" Value="16,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <!-- Outgoing message (right-aligned) -->
                        <Border HorizontalAlignment="Right" MaxWidth="400" CornerRadius="16,16,4,16"
                                Padding="14,10" Margin="60,2,0,2"
                                Background="#3F51B5">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOutgoing}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <TextBlock Text="{Binding Content}" FontSize="14" Foreground="White"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                           FontSize="10" Foreground="#B0BEC5" HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Incoming message (left-aligned) -->
                        <Border HorizontalAlignment="Left" MaxWidth="400" CornerRadius="16,16,16,4"
                                Padding="14,10" Margin="0,2,60,2"
                                Background="#2A2A4A">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOutgoing}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <TextBlock Text="{Binding SenderName}" FontSize="11" Foreground="#7C4DFF"
                                           FontWeight="SemiBold" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding Content}" FontSize="14" Foreground="#E0E0E0"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                           FontSize="10" Foreground="#757575" HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Input bar -->
        <Border Grid.Row="2" Background="#1A1A2E" Padding="12" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Attach file -->
                <Button Grid.Column="0" Content="ðŸ“Ž" FontSize="20"
                        Command="{Binding SendFileCommand}"
                        Background="Transparent" BorderThickness="0" Foreground="#B0BEC5"
                        Cursor="Hand" Padding="8,6" VerticalAlignment="Center" Margin="0,0,4,0"
                        ToolTip="Send a file"/>

                <!-- Message input -->
                <Border Grid.Column="1" Background="#2A2A4A" CornerRadius="24" Padding="4,0">
                    <TextBox Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent" BorderThickness="0" Foreground="#E0E0E0"
                             FontSize="14" Padding="16,10" VerticalAlignment="Center"
                             CaretBrush="#7C4DFF"
                             x:Name="MessageInput">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </Border>

                <!-- Send button -->
                <Button Grid.Column="2" Content="âž¤" FontSize="20"
                        Command="{Binding SendMessageCommand}"
                        Cursor="Hand" Padding="12,8" Margin="8,0,0,0"
                        VerticalAlignment="Center" ToolTip="Send message">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3F51B5"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="20" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5C6BC0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
