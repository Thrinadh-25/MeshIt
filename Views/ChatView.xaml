<UserControl x:Class="meshIt.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:meshIt.Converters">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Background="#36393F">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat header -->
        <Border Grid.Row="0" Background="#36393F" BorderBrush="#2C2F33" BorderThickness="0,0,0,1" Padding="16,0">
            <Grid>
                <!-- Channel header -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="#" FontSize="20" FontWeight="Bold" Foreground="#72767D" Margin="0,0,6,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentChannelName}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding CurrentChannelName}" FontSize="16" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentChannelName}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Peer header -->
                    <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentChannelName}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <Run Text="@"/>
                        <Run Text="{Binding SelectedPeer.Name, Mode=OneWay, FallbackValue=''}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Empty state -->
                <TextBlock Text="Select a channel or user" FontSize="14" Foreground="#72767D"
                           VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedPeer}" Value="{x:Null}"/>
                                        <Condition Binding="{Binding CurrentChannelName}" Value="{x:Null}"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Messages -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Messages}"
                 Background="Transparent" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 x:Name="MessagesList">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="Padding" Value="16,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Bd" Background="Transparent" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#32353B"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,6">
                        <!-- Sender line -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="{Binding SenderName}" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#7289DA"/>
                            <!-- Channel badge -->
                            <TextBlock FontSize="11" Foreground="#43B581" Margin="8,0,0,0"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ChannelName}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="in "/>
                                <Run Text="{Binding ChannelName, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding Timestamp, StringFormat=' â€” {0:HH:mm}'}"
                                       FontSize="11" Foreground="#72767D" Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                            <!-- Hop count badge -->
                            <TextBlock FontSize="10" Foreground="#72767D" Margin="8,0,0,0"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RouteTrace}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="ðŸ”€ "/>
                                <Run Text="{Binding RouteTrace, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                        <!-- Message content -->
                        <TextBlock Text="{Binding Content}" FontSize="14" Foreground="#DCDDDE"
                                   TextWrapping="Wrap" Margin="0,2,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Input area -->
        <Border Grid.Row="2" Padding="16,0,16,16">
            <Border Background="#40444B" CornerRadius="8" Padding="4,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Attach -->
                    <Button Grid.Column="0" Content="âž•" FontSize="16"
                            Command="{Binding SendFileCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#B9BBBE"
                            Cursor="Hand" Padding="10,8" ToolTip="Attach file"/>

                    <!-- Text input -->
                    <TextBox Grid.Column="1"
                             Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent" BorderThickness="0" Foreground="#DCDDDE"
                             FontSize="14" Padding="8,10" VerticalAlignment="Center"
                             CaretBrush="#7289DA">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Send -->
                    <Button Grid.Column="2" Content="âž¤" FontSize="16"
                            Command="{Binding SendMessageCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#7289DA"
                            Cursor="Hand" Padding="10,8" ToolTip="Send"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
