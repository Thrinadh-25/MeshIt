<Window x:Class="meshIt.Views.UserSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to meshIt" 
        Width="420" Height="340"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#1A1A2E" CornerRadius="16" Padding="0" BorderBrush="#3F51B5" BorderThickness="1">
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo / Title -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,8">
                <TextBlock Text="ðŸ“¡" FontSize="40" HorizontalAlignment="Center"/>
                <TextBlock Text="meshIt" FontSize="28" FontWeight="Bold" Foreground="#7C4DFF"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="BLE Mesh Messaging" FontSize="14" Foreground="#9E9E9E"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="2" Text="Choose your display name" FontSize="13"
                       Foreground="#B0BEC5" Margin="0,0,0,8"/>

            <!-- Username input -->
            <Border Grid.Row="3" Background="#2A2A4A" CornerRadius="12" Padding="4,0"
                    VerticalAlignment="Top" Margin="0,0,0,16">
                <TextBox x:Name="UsernameInput" FontSize="16" Padding="14,12"
                         Background="Transparent" BorderThickness="0"
                         Foreground="#E0E0E0" CaretBrush="#7C4DFF"
                         MaxLength="30"
                         VerticalAlignment="Center"/>
            </Border>

            <!-- Start button -->
            <Button Grid.Row="4" Content="Get Started â†’" FontSize="15" FontWeight="SemiBold"
                    Padding="20,12" Cursor="Hand"
                    Click="OnGetStartedClicked" x:Name="StartButton">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3F51B5"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="12" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5C6BC0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
