<Window x:Class="meshIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:meshIt.Views"
        xmlns:converters="clr-namespace:meshIt.Converters"
        Title="meshIt â€” BLE Mesh Messenger"
        Width="1400" Height="800"
        MinWidth="1000" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#23272A"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver" DragLeave="Window_DragLeave">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>  <!-- Channels -->
            <ColumnDefinition Width="250"/>  <!-- Peers -->
            <ColumnDefinition Width="*"/>    <!-- Chat -->
            <ColumnDefinition Width="200"/>  <!-- Members -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <!-- ===== Column 0: Channels Sidebar ===== -->
        <Border Grid.Column="0" Grid.Row="0" Background="#2C2F33">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Identity header -->
                <Border Grid.Row="0" Background="#23272A" Padding="14,12" Cursor="Hand"
                        MouseLeftButtonUp="IdentityHeader_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Username}" FontSize="13" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="{Binding ShortFingerprint}" FontSize="10"
                                       FontFamily="Consolas" Foreground="#7289DA"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Channel list -->
                <views:ChannelView Grid.Row="1" DataContext="{Binding ChannelListVm}"/>
            </Grid>
        </Border>

        <!-- ===== Column 1: Peers List ===== -->
        <Border Grid.Column="1" Grid.Row="0" Background="#2C2F33"
                BorderBrush="#23272A" BorderThickness="1,0,1,0">
            <views:PeerListView DataContext="{Binding}"/>
        </Border>

        <!-- ===== Column 2: Chat Area ===== -->
        <views:ChatView Grid.Column="2" Grid.Row="0" DataContext="{Binding}"/>

        <!-- ===== Column 3: Members / Tools Sidebar ===== -->
        <Border Grid.Column="3" Grid.Row="0" Background="#2C2F33">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10" HorizontalAlignment="Center">
                    <Button Content="ðŸ“Š" ToolTip="Diagnostics" FontSize="16"
                            Command="{Binding ToggleDiagnosticsCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#B9BBBE"
                            Cursor="Hand" Padding="6,4" Margin="2,0"/>
                    <Button Content="âš™ï¸" ToolTip="Settings" FontSize="16"
                            Command="{Binding ToggleSettingsCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#B9BBBE"
                            Cursor="Hand" Padding="6,4" Margin="2,0"/>
                    <Button Content="ðŸ’¾" ToolTip="Export Backup" FontSize="16"
                            Command="{Binding ExportBackupCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#B9BBBE"
                            Cursor="Hand" Padding="6,4" Margin="2,0"/>
                </StackPanel>

                <!-- Channel Members -->
                <Border Grid.Row="1" Background="#2F3136" CornerRadius="4" Margin="8,0,8,8" Padding="10,8"
                        Visibility="{Binding IsChannelMembersVisible, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="MEMBERS" FontSize="12" FontWeight="Bold"
                                   Foreground="#B9BBBE" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding CurrentChannelMembers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <Ellipse Width="8" Height="8" Fill="#43B581" Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding}" FontSize="13" Foreground="#DCDDDE"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="No members yet" FontSize="11" Foreground="#72767D" Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentChannelMembers.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- File Transfers -->
                <views:FileTransferView Grid.Row="2" DataContext="{Binding}"/>
            </Grid>
        </Border>

        <!-- ===== Overlays ===== -->
        <Border Grid.Column="2" Grid.Row="0" Panel.ZIndex="10"
                Visibility="{Binding IsSettingsOpen, Converter={StaticResource BoolToVis}}"
                Background="#36393F">
            <views:SettingsView DataContext="{Binding SettingsVm}"/>
        </Border>
        <Border Grid.Column="2" Grid.Row="0" Panel.ZIndex="11"
                Visibility="{Binding IsIdentityOpen, Converter={StaticResource BoolToVis}}"
                Background="#36393F">
            <views:IdentityView DataContext="{Binding IdentityVm}"/>
        </Border>
        <Border Grid.Column="2" Grid.Row="0" Panel.ZIndex="12"
                Visibility="{Binding IsDiagnosticsOpen, Converter={StaticResource BoolToVis}}"
                Background="#36393F">
            <views:DiagnosticsView DataContext="{Binding DiagnosticsVm}"/>
        </Border>

        <!-- Drag-drop overlay -->
        <Border Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Panel.ZIndex="20"
                Background="#CC23272A"
                Visibility="{Binding IsDragOver, Converter={StaticResource BoolToVis}}"
                IsHitTestVisible="False">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“" FontSize="64" HorizontalAlignment="Center"/>
                <TextBlock Text="Drop files to send" FontSize="20" FontWeight="SemiBold"
                           Foreground="White" HorizontalAlignment="Center" Margin="0,12,0,0"/>
            </StackPanel>
        </Border>

        <!-- ===== Status bar ===== -->
        <Border Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1"
                Background="#23272A" Padding="16,6" BorderBrush="#2C2F33" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusText}" FontSize="11" Foreground="#72767D"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CapabilitiesText}" FontSize="10" Foreground="#72767D"
                               Margin="0,0,12,0"/>
                    <TextBlock Text="ðŸ”" FontSize="9" Margin="0,0,4,0" Foreground="#7289DA"/>
                    <TextBlock FontSize="11" Foreground="#72767D">
                        <Run Text="meshIt v"/>
                        <Run Text="{Binding AppVersion, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
