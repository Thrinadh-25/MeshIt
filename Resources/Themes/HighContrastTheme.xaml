<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="SurfaceBackground" Color="#333333"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FFFF00"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#FFFF66"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="#808000"/>

    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#00FF00"/>
    <SolidColorBrush x:Key="MutedText" Color="#808080"/>
    <SolidColorBrush x:Key="DimText" Color="#666666"/>

    <!-- Message Bubbles -->
    <SolidColorBrush x:Key="SentBubble" Color="#FFFF00"/>
    <SolidColorBrush x:Key="ReceivedBubble" Color="#333333"/>
    <SolidColorBrush x:Key="SentBubbleText" Color="#000000"/>
    <SolidColorBrush x:Key="ReceivedBubbleText" Color="#FFFFFF"/>

    <!-- Status -->
    <SolidColorBrush x:Key="OnlineBrush" Color="#00FF00"/>
    <SolidColorBrush x:Key="OfflineBrush" Color="#808080"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFF00"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF0000"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#00FF00"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#808080"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarThumb" Color="#808080"/>
    <SolidColorBrush x:Key="ScrollBarTrack" Color="Transparent"/>

    <!-- Theme name -->
    <Color x:Key="ThemeName" A="255" R="0" G="0" B="3"/>
</ResourceDictionary>
