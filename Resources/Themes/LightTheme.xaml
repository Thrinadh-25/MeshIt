<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SurfaceBackground" Color="#E8E8F0"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#5C6BC0"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#7986CB"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="#C5CAE9"/>

    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryText" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#616161"/>
    <SolidColorBrush x:Key="MutedText" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="DimText" Color="#BDBDBD"/>

    <!-- Message Bubbles -->
    <SolidColorBrush x:Key="SentBubble" Color="#5C6BC0"/>
    <SolidColorBrush x:Key="ReceivedBubble" Color="#E8EAF6"/>
    <SolidColorBrush x:Key="SentBubbleText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ReceivedBubbleText" Color="#212121"/>

    <!-- Status -->
    <SolidColorBrush x:Key="OnlineBrush" Color="#43A047"/>
    <SolidColorBrush x:Key="OfflineBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FB8C00"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#E53935"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#43A047"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#EEEEEE"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarThumb" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="ScrollBarTrack" Color="Transparent"/>

    <!-- Theme name -->
    <Color x:Key="ThemeName" A="255" R="0" G="0" B="2"/>
</ResourceDictionary>
