<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#0F0F23"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#1A1A2E"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#121228"/>
    <SolidColorBrush x:Key="SurfaceBackground" Color="#2A2A4A"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#7C4DFF"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#9C7CFF"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="#3F51B5"/>

    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="MutedText" Color="#616161"/>
    <SolidColorBrush x:Key="DimText" Color="#757575"/>

    <!-- Message Bubbles -->
    <SolidColorBrush x:Key="SentBubble" Color="#7C4DFF"/>
    <SolidColorBrush x:Key="ReceivedBubble" Color="#1E1E3A"/>
    <SolidColorBrush x:Key="SentBubbleText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ReceivedBubbleText" Color="#E0E0E0"/>

    <!-- Status -->
    <SolidColorBrush x:Key="OnlineBrush" Color="#66BB6A"/>
    <SolidColorBrush x:Key="OfflineBrush" Color="#616161"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFA726"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF5350"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#66BB6A"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#2A2A4A"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#2A2A4A"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarThumb" Color="#3A3A5A"/>
    <SolidColorBrush x:Key="ScrollBarTrack" Color="Transparent"/>

    <!-- Theme name -->
    <Color x:Key="ThemeName" A="255" R="0" G="0" B="1"/>
</ResourceDictionary>
