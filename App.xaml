<Application x:Class="meshIt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:meshIt.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default theme (will be swapped at runtime by ThemeService) -->
                <ResourceDictionary Source="Resources/Themes/DarkTheme.xaml"/>
                <!-- Default language -->
                <ResourceDictionary Source="Resources/Localization/en-US.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
            <converters:ZeroToVisibilityConverter x:Key="ZeroToVisConverter"/>

            <!-- Global font -->
            <Style TargetType="Window">
                <Setter Property="FontFamily" Value="Segoe UI, Inter, sans-serif"/>
            </Style>

            <!-- ScrollBar dark theme -->
            <Style TargetType="ScrollBar">
                <Setter Property="Width" Value="6"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <!-- ToolTip -->
            <Style TargetType="ToolTip">
                <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
